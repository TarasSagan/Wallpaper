<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_user_black_24dp" />

    <TextView
        android:id="@+id/textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="serif"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageProfile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text=" asdqwe" />

    <TextView
        android:id="@+id/textPersonTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonTwitter"
        app:layout_constraintStart_toEndOf="@+id/buttonTwitter"
        app:layout_constraintTop_toTopOf="@+id/buttonTwitter"
        tools:text="@qweagqweq " />

    <TextView
        android:id="@+id/textPersonInstagran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonInstagram"
        app:layout_constraintStart_toEndOf="@+id/buttonInstagram"
        app:layout_constraintTop_toTopOf="@+id/buttonInstagram"
        tools:text="@sqdweqw" />

    <Button
        android:id="@+id/buttonTwitter"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_twitter"
        app:layout_constraintBottom_toTopOf="@+id/buttonInstagram"
        app:layout_constraintStart_toEndOf="@+id/imageProfile" />

    <Button
        android:id="@+id/buttonInstagram"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_instagram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageProfile" />
</android.support.constraint.ConstraintLayout>
